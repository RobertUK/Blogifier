{

  "AllowedHosts": "*",
  "Blogifier": {
    "DbProvider": "SQLite",
    "ConnString": "Data Source=Data/Blog.db",
    "Salt": "iugjh^%h",
    "DemoMode": false,
    "FileExtensions": "png,gif,jpeg,jpg,zip,7z,pdf,doc,docx,xls,xlsx,mp3,mp4,avi"
    //"PathBase": "/robert/"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "AzureAd": {
    "Instance": "https://ITThingsB2C.b2clogin.com/",
    "Domain": "ITThingsB2C.onmicrosoft.com",
    "TenantId": "f1c715fd-6b5f-4443-a621-6cc831017c21",
    "ClientId": "a0319288-8d40-440d-8c3c-5fb833461d9d",
    "CallbackPath": "/signin-oidc",
    "Scopes": "access_as_user",
    "SignUpSignInPolicyId": "B2C_1A_SIGNUP_SIGNIN",
    "SignedOutCallbackPath": "/signout/B2C_1A_SIGNUP_SIGNIN",
    "ResetPasswordPolicyId": "B2C_1A_PASSWORDRESET",
    "EditProfilePolicyId": "B2C_1A_PROFILEEDIT",
    "EnablePiiLogging": true,
    "ClientSecret": "Client secret from app-registration. Check user secrets/azure portal.",
    "ClientCertificates": []
  }
}
